<?xml version="1.0" encoding="utf-8"?>
<process name="Simple Docflow" key="SimpleDocflow" xmlns="http://jbpm.org/4.2/jpdl">

    <start name="Start">
        <transition to="New"/>
    </start>

    <state name="New">
        <transition name="ToAgreement" to="Agreement"/>
    </state>

    <custom name="Agreement" class="com.haulmont.workflow.core.proc.Assigner">
        <property name="assignee">
            <string value="admin"/>
        </property>
        <transition name="Ok" to="Approval"/>
        <transition name="NotOk" to="New"/>
    </custom>

    <custom name="Approval" class="com.haulmont.workflow.core.proc.Assigner">
        <property name="assignee">
            <string value="admin"/>
        </property>
        <transition name="Ok" to="End"/>
        <transition name="NotOk" to="New"/>
    </custom>

    <end name="End"/>

</process>
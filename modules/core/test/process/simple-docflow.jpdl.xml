<?xml version="1.0" encoding="utf-8"?>
<process name="Simple Docflow" key="SimpleDocflow" xmlns="http://jbpm.org/4.2/jpdl">

    <start name="Start">
        <transition to="New"/>
    </start>

    <state name="New">
        <transition name="ToAgreement" to="Agreement"/>
    </state>

    <task name="Agreement">
        <assignment-handler class="com.haulmont.docflow.core.proc.AgreementAssignmentHandler"/>
        <transition name="Ok" to="Approval"/>
        <transition name="NotOk" to="New"/>
    </task>

    <task name="Approval" assignee="approvaluser">
        <!--<assignment-handler class="com.haulmont.docflow.core.procreementAssignmentHandler"/>-->
        <transition name="Ok" to="End"/>
        <transition name="NotOk" to="New"/>
    </task>

    <end name="End"/>

</process>
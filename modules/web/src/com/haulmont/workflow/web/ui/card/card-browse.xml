<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.workflow.web.ui.card.CardBrowser"
        messagesPack="com.haulmont.workflow.web.ui.card"
        caption="msg://cardBrowser.caption"
        focusComponent="genericFilter"
        >

    <dsContext>
        <collectionDatasource id="cardDs" class="com.haulmont.workflow.core.entity.Card" view="browse">
            <query>
                select c from wf$Card c order by c.createTs desc
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox expand="table-panel">
            <vbox expand="genericFilter" stylename="edit-area">
                <filter id="genericFilter" datasource="cardDs">
                    <properties include=".*"/>
                </filter>
            </vbox>

            <vbox id="table-panel" expand="cardTable" spacing="true">
                <hbox align="MIDDLE_LEFT" spacing="true" margin="true">
                    <button action="cardTable.refresh" icon="icons/refresh.png"/>
                    <button action="cardTable.open" icon="icons/edit.png"/>
                    <button action="cardTable.create" icon="icons/create.png"/>
                    <button action="cardTable.remove" icon="icons/remove.png"/>
                    <button action="cardTable.viewVariables"/>
                </hbox>
                <table id="cardTable" editable="false">
                    <rowsCount/>
                    <columns>
                        <column id="description" caption="msg://description"/>
                        <column id="proc.name" caption="msg://procName"/>
                        <column id="locState" caption="msg://state"/>
                    </columns>
                    <rows datasource="cardDs"/>
                </table>
            </vbox>
        </vbox>
    </layout>
</window>
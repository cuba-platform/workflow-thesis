<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.workflow.web.ui.proc.ProcBrowser"
        messagesPack="com.haulmont.workflow.web.ui.proc"
        caption="msg://procBrowser.caption"
        focusComponent="procTable"
        >

    <dsContext>
        <collectionDatasource id="procDs" class="com.haulmont.workflow.core.entity.Proc" view="browse">
            <query>
                select p from wf$Proc p order by p.name
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox id="table-panel" expand="procTable" spacing="true">
            <hbox align="MIDDLE_LEFT" spacing="true" margin="true">
                <button action="procTable.refresh" icon="icons/refresh.png"/>
                <button action="procTable.edit" icon="icons/edit.png"/>
                <button action="procTable.remove" icon="icons/remove.png" />
            </hbox>
            <table id="procTable" editable="false">
                <columns>
                    <column id="name"/>
                    <column id="jbpmProcessKey"/>
                    <column id="design"/>
                </columns>
                <rows datasource="procDs"/>
            </table>
        </vbox>
    </layout>
</window>
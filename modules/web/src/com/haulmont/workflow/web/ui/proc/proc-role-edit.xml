<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.workflow.web.ui.proc.ProcRoleEditor"
        messagesPack="com.haulmont.workflow.web.ui.proc"
        datasource="roleDs"
        caption="msg://roleEditor.caption"
        focusComponent="code"
        >

    <dsContext>
        <datasource
                id="roleDs"
                class="com.haulmont.workflow.core.entity.ProcRole"
                view="edit">
        </datasource>
        <collectionDatasource id="secRolesDs" class="com.haulmont.cuba.security.entity.Role" view="_local">
            <query>
                <![CDATA[select r from sec$Role r order by r.name]]>
            </query>
        </collectionDatasource>
    </dsContext>

    <#assign width = 400>
    <layout expand="spring">
        <hbox stylename="edit-area">
            <vbox margin="true">
                <grid spacing="true" width="100%">
                    <columns>
                        <column flex="1"/>
                        <column flex="1"/>
                        <column flex="1"/>
                    </columns>
                    <rows>
                        <row>
                            <label value="msg://code"/>
                            <textField id="code" datasource="roleDs" property="code"
                                       width="${width}" required="true" requiredMessage="msg://codeMsg"/>
                        </row>
                        <row>
                            <label value="msg://name"/>
                            <textField id="name" datasource="roleDs" property="name"
                                       width="${width}" required="true" requiredMessage="msg://nameMsg"/>
                        </row>
                        <row>
                            <label value="msg://multiUser"/>
                            <checkBox id="multiUser" datasource="roleDs" property="multiUser"
                                      width="${width}"/>
                        </row>
                        <row>
                            <label value="msg://assignToCreator"/>
                            <checkBox id="assignToCreator" datasource="roleDs" property="assignToCreator"
                                      width="${width}"/>
                        </row>
                        <row>
                            <label value="msg://role"/>
                            <lookupField id="role" datasource="roleDs" property="role" optionsDatasource="secRolesDs"
                                      width="${width}"/>
                        </row>
                    </rows>
                </grid>
            </vbox>
        </hbox>
        <vbox margin="true">
            <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
        </vbox>
        <vbox id="spring"/>
    </layout>
</window>
<window xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.workflow.web.ui.base.CardRolesFrame"
        messagesPack="com.haulmont.workflow.web.ui.base"
        caption="msg://cardRoleEditor"
        >

    <dsContext>
        <collectionDatasource id="procRolesDs" class="com.haulmont.workflow.core.entity.ProcRole" view="browse">
            <query>
                <![CDATA[select pr from wf$ProcRole pr where pr.proc.id = :custom$procId and (pr.invisible is null or pr.invisible = false) order by pr.code]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="tmpCardRolesDs" class="com.haulmont.workflow.core.entity.CardRole" view="card-edit">
            <datasourceClass>com.haulmont.workflow.web.ui.base.CardRolesFrame$CardProcRolesDatasource</datasourceClass>
        </collectionDatasource>
    </dsContext>

    <layout expandLayout="true" expand="rolesTable" spacing="true" height="200px">
        <grid width="100%" spacing="true">
            <columns>
                <column/>
                <column/>
                <column/>
                <column/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <lookupField id="createRoleLookup" width="150"/>
                    <button id="removeRole" action="rolesTable.remove" icon="icons/remove.png"/>
                    <button id="moveUp" icon="icons/up.png"/>
                    <button id="moveDown" icon="icons/down.png"/>
                    <checkBox id="showSortOrder" caption="msg://showSortOrder"/>
                </row>
            </rows>
        </grid>
        <table id="rolesTable" sortable="false" multiselect="true">
            <columns>
                <column id="procRole.name" caption="msg://role" width="150"/>
                <column id="user" caption="msg://user"/>
                <column id="sortOrder" caption="msg://sortOrder"/>
                <column id="notifyByEmail" caption="msg://notifyByEmail" width="45"/>
                <column id="notifyByCardInfo" caption="msg://notifyByCardInfo" width="45"/>
            </columns>
            <rows datasource="tmpCardRolesDs"/>
        </table>
    </layout>

</window>
<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.workflow.web.ui.assignment.AssignmentBrowser"
        messagesPack="com.haulmont.workflow.web.ui.assignment"
        caption="msg://assignmentBrowser.caption"
        focusComponent="aTable"
        >

    <dsContext>
        <collectionDatasource id="aDs" class="com.haulmont.workflow.core.entity.Assignment" view="browse">
            <query>
                select a from wf$Assignment a
                where a.user.id = :session$userId and a.finished is null
                order by a.createTs
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox id="table-panel" expand="aTable" spacing="true">
            <hbox align="MIDDLE_LEFT" spacing="true" margin="true">
                <button action="aTable.refresh" icon="icons/refresh.png"/>
                <button action="aTable.open" icon="icons/edit.png"/>
            </hbox>
            <table id="aTable" editable="false">
                <columns>
                    <column id="locDescription" caption="msg://description"/>
                    <column id="card.description" caption="msg://card"/>
                    <column id="card.proc.name" caption="msg://procName"/>
                    <column id="card.locState" caption="msg://state"/>
                </columns>
                <rows datasource="aDs"/>
            </table>
        </vbox>
    </layout>
</window>
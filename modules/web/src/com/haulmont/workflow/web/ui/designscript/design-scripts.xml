<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.workflow.web.ui.designscript.DesignScriptsWindow"
        messagesPack="com.haulmont.workflow.web.ui.designscript"
        caption="msg://caption"
        >

    <dsContext>
        <collectionDatasource id="scriptsDs" class="com.haulmont.workflow.core.entity.DesignScript" view="_local">
            <query>
                select s from wf$DesignScript s where s.design.id = :param$design
            </query>
        </collectionDatasource>
    </dsContext>

    <layout expand="split">
        <split id="split" orientation="horizontal" pos="30">
            <vbox id="listPane" expand="table" margin="true">
                <table id="table">
                    <buttonsPanel>
                        <button action="table.new" icon="icons/create.png"/>
                        <button action="table.modify" icon="icons/edit.png"/>
                        <button action="table.remove" icon="icons/remove.png"/>
                    </buttonsPanel>
                    <columns>
                        <column id="name"/>
                    </columns>
                    <rows datasource="scriptsDs"/>
                </table>
            </vbox>
            <vbox id="contentPane" expand="contentField" spacing="true" margin="true">
                <textField id="nameField" datasource="scriptsDs" property="name" rows="1" width="100%" height="25"
                           editable="false" caption="msg://com.haulmont.workflow.core.entity/DesignScript.name"/>
                <textField id="contentField" datasource="scriptsDs" property="content"
                           editable="false" caption="msg://com.haulmont.workflow.core.entity/DesignScript.content" />
                <vbox id="actionsPane" visible="false">
                    <hbox align="MIDDLE_LEFT" spacing="true" expandable="false">
                        <button id="saveBtn" action="save" icon="icons/ok.png"/>
                        <button id="cancelBtn" action="cancel" icon="icons/cancel.png"/>
                    </hbox>
                </vbox>
            </vbox>
        </split>
    </layout>
</window>
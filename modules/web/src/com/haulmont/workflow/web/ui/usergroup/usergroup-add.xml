<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.workflow.web.ui.usergroup.UserGroupAdd"
        messagesPack="com.haulmont.workflow.web.ui.usergroup"
        datasource="userGroupDs"
        caption="msg://userGroupAdd.caption"
        >

    <dsContext>
        <collectionDatasource id="userGroupsDs" class="com.haulmont.cuba.core.entity.StandardEntity" view="_local">
            <datasourceClass>com.haulmont.workflow.web.ui.usergroup.UserGroupsDatasource</datasourceClass>
        </collectionDatasource>
    </dsContext>

    <#assign width = 300>
    <layout>
        <vbox id="main" stylename="edit-area" expandable="false" margin="true" spacing="true">
            <hbox id="searchFilter" align="MIDDLE_CENTER" spacing="true">
                <label value="msg://searchText"/>
                <textField id="searchText" width="${width}"/>
                <button id="searchButton"/>
            </hbox>
            <twinColumn id="twinColumn" optionsDatasource="userGroupsDs" rows="18" columns="25" expandable="false"/>
            <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
        </vbox>
    </layout>
</window>
<window
        xmlns="http://schemas.haulmont.com/cuba/5.0/window.xsd"
        class="com.haulmont.workflow.web.ui.usergroup.UserGroupAdd"
        messagesPack="com.haulmont.workflow.web.ui.usergroup"
        datasource="userGroupDs"
        caption="msg://userGroupAdd.caption"
        >

    <dsContext>
        <collectionDatasource id="userGroupsDs"
                              class="com.haulmont.cuba.core.entity.StandardEntity"
                              view="_local"
                              datasourceClass="com.haulmont.workflow.web.ui.usergroup.UserGroupsDatasource">
        </collectionDatasource>
    </dsContext>

    <assign name="width" value="300"/>

    <layout expand="windowActions">
        <hbox id="searchFilter" align="MIDDLE_CENTER" spacing="true">
            <label id="searchTextLabel" value="msg://searchText"/>
            <textField id="searchText" width="${width}"/>
            <button id="searchButton"/>
        </hbox>
        <twinColumn id="twinColumn" optionsDatasource="userGroupsDs" rows="18" columns="25"/>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>
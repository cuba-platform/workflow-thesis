<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.workflow.web.ui.attachment.AttachmentEditor"
        messagesPack="com.haulmont.workflow.web.ui.attachment"
        datasource="attachmentDs"
        caption="msg://editorCaption">

    <dsContext>
        <datasource id="attachmentDs" class="com.haulmont.workflow.core.entity.AssignmentAttachment" view="assignment-edit">
            <datasource id="fileDs" property="file"/>
        </datasource>
    </dsContext>

    <layout expand="windowActions">
        <iframe id="frame" src="/workflow/client/web/ui/attachment/attachment-frame.xml"/>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>

<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="com.haulmont.workflow.web.ui.card.CardRoleEditor"
        messagesPack="com.haulmont.workflow.web.ui.card"
        datasource="roleDs"
        caption="msg://roleEditor.caption"
        >

    <dsContext>
        <datasource
                id="roleDs"
                class="com.haulmont.workflow.core.entity.CardRole"
                view="card-edit">
        </datasource>

        <collectionDatasource id="procRolesDs" class="com.haulmont.workflow.core.entity.ProcRole" view="browse">
            <query>
                select r from wf$ProcRole r where r.proc.id = :param$proc
            </query>
        </collectionDatasource>

        <collectionDatasource id="usersDs" class="com.haulmont.cuba.security.entity.User" view="_local">
            <query>
                <![CDATA[select u from sec$User u order by u.name]]>
            </query>
    </collectionDatasource>
</dsContext>

    <#assign width = 300>
    <layout expand="spring">
        <hbox stylename="edit-area">
            <vbox margin="true">
                <grid spacing="true" width="100%">
                    <columns>
                        <column flex="1"/>
                        <column flex="1"/>
                        <column flex="1"/>
                    </columns>
                    <rows>
                        <row>
                            <label value="msg://role"/>
                            <lookupField id="roleLookup" datasource="roleDs" property="procRole"
                                       optionsDatasource="procRolesDs" width="${width}"/>
                        </row>
                        <row>
                            <label value="msg://user"/>
                            <lookupField id="userLookup" datasource="roleDs" property="user"
                                       optionsDatasource="usersDs" width="${width}" required="true"
                                       requiredMessage="msg://userMsg"/>
                        </row>
                        <row>
                            <label value="msg://notifyByEmail"/>
                            <checkBox id="notifyByEmailCb" datasource="roleDs" property="notifyByEmail"
                                       width="${width}"/>
                        </row>
                        <!--<row>-->
                            <!--<label value="msg://notifyByCardInfo"/>-->
                            <!--<checkBox id="notifyByCardInfoCb" datasource="roleDs" property="notifyByCardInfo"-->
                                       <!--width="${width}"/>-->
                        <!--</row>-->
                    </rows>
                </grid>
            </vbox>
        </hbox>
        <vbox margin="true">
            <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
        </vbox>
        <vbox id="spring"/>
    </layout>
</window>
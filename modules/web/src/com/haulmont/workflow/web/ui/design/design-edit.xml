<window
        xmlns="http://schemas.haulmont.com/cuba/4.1/window.xsd"
        class="com.haulmont.workflow.web.ui.design.DesignEditor"
        messagesPack="com.haulmont.workflow.web.ui.design"
        caption="msg://editor.caption"
        datasource="designDs"
        >

    <dsContext>
        <datasource id="designDs" class="com.haulmont.workflow.core.entity.Design" view="_local"/>
    </dsContext>

    <layout expand="windowActions">
        <fieldGroup datasource="designDs">
            <column width="100%">
                <field id="name" required="true"/>
                <field id="type" required="true"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>
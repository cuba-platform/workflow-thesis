<window xmlns="http://schemas.haulmont.com/cuba/4.1/window.xsd"
        class="com.haulmont.workflow.web.ui.procvariable.browse.ProcVariableBrowser"
        messagesPack="com.haulmont.workflow.web.ui.procvariable"
        lookupComponent="table"
        caption="msg://procVariable.browser.caption">
    <dsContext>
        <groupDatasource
                id="procVariableDs"
                class="com.haulmont.workflow.core.entity.ProcVariable"
                view="_local">
            <query>
                select dpv from wf$ProcVariable dpv where dpv.proc.id = :param$proc order by dpv.name
            </query>
        </groupDatasource>
    </dsContext>


    <layout expand="table">
        <groupTable id="table" multiselect="true" height="100%" width="100%">
            <buttonsPanel>
                <button action="table.create" icon="icons/create.png"/>
                <button action="table.override" icon="icons/create.png"/>
                <button action="table.edit" icon="icons/edit.png"/>
                <button action="table.remove" icon="icons/remove.png"/>
                <button action="table.refresh" icon="icons/refresh.png"/>
            </buttonsPanel>

            <columns>
                <column id="name"/>
                <column id="alias"/>
                <column id="value"/>
                <column id="overridden"/>
            </columns>
            <rows datasource="procVariableDs"/>
        </groupTable>
    </layout>

</window>
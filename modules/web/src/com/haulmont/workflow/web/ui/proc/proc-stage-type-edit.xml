<window
        xmlns="http://schemas.haulmont.com/cuba/4.1/window.xsd"
        class="com.haulmont.cuba.gui.components.AbstractEditor"
        datasource="procStageTypeDs"
        messagesPack="com.haulmont.workflow.web.ui.proc"
        caption="msg://procStageTypeEditor.caption"
        focusComponent="fieldGroup"
        >

    <dsContext>
        <datasource
                id="procStageTypeDs"
                class="com.haulmont.workflow.core.entity.ProcStageType"
                view="_local">
        </datasource>
    </dsContext>

    <assign name="width" value="250"/>

    <layout expand="windowActions" spacing="true">
        <fieldGroup id="fieldGroup" datasource="procStageTypeDs">
            <column>
                <field id="name" width="${width}"/>
                <field id="code" width="${width}"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>
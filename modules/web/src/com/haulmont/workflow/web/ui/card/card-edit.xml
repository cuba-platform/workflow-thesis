<window
        xmlns="http://schemas.haulmont.com/cuba/4.1/window.xsd"
        class="com.haulmont.workflow.web.ui.card.CardEditor"
        messagesPack="com.haulmont.workflow.web.ui.card"
        datasource="cardDs"
        caption="msg://cardEditor.caption"
        focusComponent="description"
        >

    <dsContext>
        <datasource
                id="cardDs"
                class="com.haulmont.workflow.core.entity.Card"
                view="edit">
            <collectionDatasource id="cardRolesDs" property="roles"/>
        </datasource>

        <hierarchicalDatasource id="attachmentsDs" class="com.haulmont.workflow.core.entity.CardAttachment"
                                view="card-edit" hierarchyProperty="versionOf">
            <query>select a from wf$CardAttachment a where a.card.id = :ds$cardDs order by a.createTs desc</query>
        </hierarchicalDatasource>

        <collectionDatasource id="procDs" class="com.haulmont.workflow.core.entity.Proc" view="_local"/>
    </dsContext>

    <assign name="width" value="400"/>

    <layout expand="mainPane">

        <hbox id="mainPane" expand="tabsheet">
            <tabSheet id="tabsheet">
                <tab id="mainTab" caption="msg://mainTab">
                    <accessControl data="com.haulmont.workflow.web.ui.card.CardAccessData" param="accessData">
                        <editable property="notStarted"/>

                        <vbox margin="true" spacing="true" expand="cardAttachmentsFrame">
                            <grid spacing="true" width="100%">
                                <columns>
                                    <column flex="1"/>
                                    <column flex="1"/>
                                    <column flex="1"/>
                                </columns>
                                <rows>
                                    <row>
                                        <label value="msg://description"/>
                                        <textField id="description" datasource="cardDs" property="description"
                                                   width="${width}"/>
                                    </row>
                                    <row>
                                        <label value="msg://procName"/>
                                        <lookupField id="proc" datasource="cardDs" property="proc"
                                                     optionsDatasource="procDs" width="${width}"/>
                                    </row>
                                    <row>
                                        <label value="msg://state"/>
                                        <textField id="state" datasource="cardDs" property="locState"
                                                   width="${width}" editable="false"/>
                                    </row>
                                </rows>
                            </grid>

                            <iframe id="cardAttachmentsFrame" src="/com/haulmont/workflow/web/ui/base/card-attachments-frame.xml"/>
                        </vbox>
                    </accessControl>
                </tab>

                <tab id="rolesTab" caption="msg://rolesTab">
                    <iframe id="cardRolesFrame" src="/com/haulmont/workflow/web/ui/base/card-roles-frame.xml"/>
                </tab>
            </tabSheet>

            <vbox id="actionsPane" width="250px" margin="true">
                <iframe id="actionsFrame" src="/com/haulmont/workflow/web/ui/base/action/actions-frame.xml"/>
            </vbox>
        </hbox>

        <vbox id="resolutionsPane" expand="resolutionsFrame" height="250px">
            <label value="msg://resolutions"/>
            <iframe id="resolutionsFrame" src="/com/haulmont/workflow/web/ui/base/resolutions-frame.xml"/>
        </vbox>

    </layout>
</window>
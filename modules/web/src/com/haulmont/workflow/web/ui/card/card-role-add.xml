<window
        xmlns="http://schemas.haulmont.com/cuba/5.0/window.xsd"
        class="com.haulmont.workflow.web.ui.card.CardRoleAdd"
        messagesPack="com.haulmont.workflow.web.ui.card"
        datasource="roleDs"
        caption="msg://roleAdd.caption"
        >

    <assign name="width" value="300"/>
    <assign name="userLabelWidth" value="125"/>
    <assign name="userLookupWidth" value="230"/>

    <dsContext>
        <datasource
                id="roleDs"
                class="com.haulmont.workflow.core.entity.CardRole"
                view="card-edit">
        </datasource>

        <collectionDatasource id="procRolesDs" class="com.haulmont.workflow.core.entity.ProcRole" view="browse">
            <query>
                select r from wf$ProcRole r where r.proc.id = :param$proc
            </query>
        </collectionDatasource>

        <collectionDatasource id="usersDs" class="com.haulmont.cuba.security.entity.User" view="_local">
            <query>
                <![CDATA[select u from sec$User u order by u.name]]>
            </query>
        </collectionDatasource>

        <collectionDatasource id="userGroupsDs" class="com.haulmont.workflow.core.entity.UserGroup"
                              view="card-role-add">

            <query>
                <![CDATA[select ug from wf$UserGroup ug order by ug.name]]>
            </query>
        </collectionDatasource>
    </dsContext>

    <layout expand="windowActions">
        <grid spacing="true" width="100%">
            <columns>
                <column flex="1"/>
                <column flex="1"/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <label value="msg://role"/>
                    <lookupField id="roleLookup" datasource="roleDs" property="procRole"
                                 optionsDatasource="procRolesDs" width="${width}"/>
                </row>
                <row>
                    <label value="msg://notifyByEmail"/>
                    <checkBox id="notifyByEmailCb" datasource="roleDs" property="notifyByEmail"
                              width="${width}"/>
                </row>
                <row>
                    <label value="msg://notifyByCardInfo"/>
                    <checkBox id="notifyByCardInfoCb" datasource="roleDs" property="notifyByCardInfo"
                              width="${width}"/>
                </row>
            </rows>
        </grid>
        <label id="separatorLabel" value="&lt;hr/&gt;" width="100%"/>
        <label value="msg://actor"/>
        <grid spacing="true" width="100%">
            <columns>
                <column flex="1"/>
                <column flex="1"/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <checkBox id="userCb"/>
                    <label id="userLabel" value="msg://oneUser" width="${userLabelWidth}"/>
                    <lookupField id="userLookup" datasource="roleDs" property="user"
                                 optionsDatasource="usersDs" width="${userLookupWidth}"/>
                </row>
                <row>
                    <checkBox id="userGroupCb"/>
                    <label id="userGroupLabel" value="msg://userGroup" width="${userLabelWidth}"/>
                    <lookupField id="userGroupLookup" optionsDatasource="userGroupsDs"
                                 width="${userLookupWidth}"/>
                </row>
            </rows>
        </grid>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>
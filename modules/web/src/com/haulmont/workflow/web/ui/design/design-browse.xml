<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.workflow.web.ui.design.DesignBrowser"
        messagesPack="com.haulmont.workflow.web.ui.design"
        caption="msg://browser.caption"
        focusComponent="designTable"
        >

    <dsContext>
        <groupDatasource id="designDs" class="com.haulmont.workflow.core.entity.Design" view="browse">
            <query>
                select d from wf$Design d order by d.name
                <filter>
                    <and>
                        <c>d.id = :param$id</c>
                        <c>d.src like :param$subprocId</c>
                    </and>
                </filter>
            </query>
        </groupDatasource>

        <groupDatasource
                id="designProcessVariableDs"
                class="com.haulmont.workflow.core.entity.DesignProcessVariable"
                view="_local">
            <query>
                select dpv from wf$DesignProcessVariable dpv where dpv.design.id = :ds$designDs order by dpv.name
            </query>
        </groupDatasource>
    </dsContext>

    <layout expand="tablePanel" height="100%" margin="true">
        <vbox id="tablePanel" expand="table" spacing="true">
            <filter id="genericFilter" datasource="designDs">
                <properties include=".*"/>
            </filter>
            <hbox id="table" spacing="true" width="100%" height="100%" expand="mainBox">
                <split id="mainBox" orientation="vertical" pos="70" width="100%" height="100%">
                    <vbox id="designBox" expand="designTable" width="100%" height="100%">
                        <groupTable id="designTable" multiselect="true" width="100%" height="100%">
                            <buttonsPanel>
                                <button action="designTable.create" icon="icons/create.png"/>
                                <button action="designTable.edit" icon="icons/edit.png"/>
                                <button action="designTable.design" icon="icons/edit.png"/>
                                <button action="designTable.editProcessVariables"/>
                                <button action="designTable.remove" icon="icons/remove.png"/>
                                <button action="designTable.copy" icon="icons/copy.png"/>
                            </buttonsPanel>
                            <columns>
                                <column id="name"/>
                                <column id="type"/>
                                <column id="createTs"/>
                                <column id="notificationMatrixUploaded"/>
                                <column id="compileTs"/>
                            </columns>
                            <rows datasource="designDs"/>
                        </groupTable>
                    </vbox>
                    <vbox id="variablesBox" width="100%" height="100%" expand="variablesTable">
                        <label stylename="h2" value="msg://variables"/>
                        <groupTable id="variablesTable" width="100%" height="100%">
                            <columns>
                                <column id="moduleName"/>
                                <column id="name"/>
                                <column id="propertyName"/>
                                <column id="alias"/>
                                <column id="attributeType"/>
                                <column id="value"/>
                                <column id="shouldBeOverridden"/>
                                <column id="overridden"/>
                                <column id="comment"/>
                            </columns>
                            <rows datasource="designProcessVariableDs"/>
                        </groupTable>
                    </vbox>
                </split>
                <vbox id="rightPanel" width="190px" margin="true" spacing="true">
                    <button width="100%" action="designTable.import" icon="icons/import.png"/>
                    <button width="100%" action="designTable.export" icon="icons/export.png"/>
                    <button id="showAffectedDesigns" width="100%" action="designTable.showAffectedDesigns"/>
                    <button width="100%" action="designTable.scripts" icon="icons/scripts.png"/>
                    <popupButton width="100%" id="notificationMatrix" caption="msg://notificationMatrix"/>
                    <button width="100%" action="designTable.localize"/>
                    <button width="100%" action="designTable.compile" icon="icons/compile.png"/>
                    <button width="100%" action="designTable.deploy" icon="icons/deploy.png"/>
                </vbox>
            </hbox>
        </vbox>
    </layout>
</window>

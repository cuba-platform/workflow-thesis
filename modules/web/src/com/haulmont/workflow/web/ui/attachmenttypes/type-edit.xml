<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.workflow.web.ui.attachmenttypes.AttachmentTypeEditor"
        messagesPack="com.haulmont.workflow.web.ui.attachmenttypes"
        datasource="typeDs"
        caption="msg://attachType.edit"
        focusComponent="fieldsTable"
        >

    <dsContext>
        <datasource
                id="typeDs"
                class="com.haulmont.workflow.core.entity.AttachmentType"
                view="attachmenttype.browse">
        </datasource>
    </dsContext>
    <#assign width = 200>
    <layout expand="windowActions">
        <vbox margin="true" stylename="edit-area">
            <fieldGroup id="fieldsTable" datasource="typeDs">
                <column flex="1">
                    <field id="code" required="true" maxLength="500" width="${width}"  requiredMessage="msg://codeMsg"/>
                    <field id="name" required="true" maxLength="500" width="${width}"  requiredMessage="msg://nameMsg"/>
                    <field id="comment" required="false" maxLength="1000" rows="4" width="${width}"/>
                </column>
            </fieldGroup>
        </vbox>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>

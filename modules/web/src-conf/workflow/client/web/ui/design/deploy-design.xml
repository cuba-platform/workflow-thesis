<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="workflow.client.web.ui.design.DeployDesignWindow"
        messagesPack="workflow.client.web.ui.design"
        caption="msg://deploy.caption"
        >

    <dsContext>
        <collectionDatasource id="procDs" class="com.haulmont.workflow.core.entity.Proc" view="_local">
            <query>
                select p from wf$Proc p order by p.name
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <grid id="grid" spacing="true">
            <columns>
                <column flex="1"/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <label value="msg://designName"/>
                    <label id="designNameLab"/>
                </row>
                <row>
                    <label value="msg://newProc"/>
                    <checkBox id="newProcField"/>
                </row>
                <row>
                    <label value="msg://existingProc"/>
                    <lookupField id="procField" optionsDatasource="procDs" enable="false" width="300"/>
                </row>
            </rows>
        </grid>
        <hbox align="MIDDLE_LEFT" spacing="true" margin="true;false;false;false" expandable="false" height="100%">
            <button id="deployBtn" icon="icons/ok.png"/>
            <button id="cancelBtn" icon="icons/cancel.png"/>
        </hbox>
    </layout>
</window>
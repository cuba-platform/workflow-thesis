<window
        xmlns="http://www.haulmont.com/schema/cuba/gui/window.xsd"
        class="workflow.client.web.ui.proc.ProcRoleLookup"
        messagesPack="workflow.client.web.ui.proc"
        caption="msg://procRoleLookup.caption"
        lookupComponent="procRolesTable"
        >

    <dsContext>
        <collectionDatasource id="procRolesDs" class="com.haulmont.workflow.core.entity.ProcRole" view="_local">
            <query>
                select pr from wf$ProcRole pr where pr.proc.id = :param$proc order by pr.name
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <vbox id="table-panel" expand="procRolesTable" spacing="true">
            <table id="procRolesTable" editable="false" multiselect="true">
                <columns>
                    <column id="name" caption="msg://name"/>
                </columns>
                <rows datasource="procRolesDs"/>
            </table>
        </vbox>
    </layout>
</window>
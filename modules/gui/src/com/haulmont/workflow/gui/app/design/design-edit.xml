<window
        xmlns="http://schemas.haulmont.com/cuba/5.0/window.xsd"
        class="com.haulmont.workflow.gui.app.design.DesignEditor"
        messagesPack="com.haulmont.workflow.gui.app.design"
        caption="msg://editor.caption"
        datasource="designDs"
        >

    <dsContext>
        <datasource id="designDs" class="com.haulmont.workflow.core.entity.Design" view="_local"/>
    </dsContext>

    <layout expand="windowActions" spacing="true">
        <grid margin="true" spacing="true" stylename="edit-area">
            <columns>
                <column flex="1"/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <vbox align="MIDDLE_RIGHT">
                        <label value="msg://name"/>
                    </vbox>
                    <textField width="200px" required="true" datasource="designDs" property="name"/>
                </row>
                <row>
                    <vbox align="MIDDLE_RIGHT">
                        <label value="msg://designType"/>
                    </vbox>
                    <lookupField width="200px" required="true" datasource="designDs" property="type"/>
                </row>
            </rows>
        </grid>
        <iframe id="windowActions" src="/com/haulmont/cuba/gui/edit-window.actions.xml"/>
    </layout>
</window>